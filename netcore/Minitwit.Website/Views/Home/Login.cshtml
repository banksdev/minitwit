@model Minitwit.Website.Models.LoginViewModel


@{ 
    var data = ViewData["Errors"];
    ViewData["Title"] = "Sign Up";

}

<h2>Sign In</h2>

@if(data != null)
{
    @foreach(var error in data as List<string>)
    {
        <div class=error><strong>Error:</strong> @error </div>
    }
}

<form action="" method=post>
    @Html.AntiForgeryToken()
    <dl>
        <dt>Username:</dt>
            <dd>
                <input type=text name=username size=30 asp-for="@Model.Username" />
            </dd>
        <dt>Password:</dt>
        <dd>
            <input type=password name=password size=30 asp-for="@Model.Password" />

        </dd>
    </dl>
    <div class=actions>
        <input type=submit value="Sign In">
    </div>
</form>

